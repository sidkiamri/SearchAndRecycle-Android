<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_5"
    tools:context=".Fragment.SecondScreen">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/screen3_iv"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        app:lottie_rawRes="@raw/camera_ofl" />


    <TextView
        android:id="@+id/screen3_tv"
        android:layout_width="275dp"
        android:layout_height="163dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/interbold"
        android:gravity="center"
        android:text="Use the camera to scan recyclable items and earn your rewards !"
        android:textColor="#424242"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen3_iv"
        app:lineHeight="40dp" />

    <ImageView
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_40sdp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="136dp"
        android:src="@drawable/img_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>