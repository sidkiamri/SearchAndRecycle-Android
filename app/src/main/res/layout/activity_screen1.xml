<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_5"
    tools:context=".Fragment.FirstScreen"
    android:layout_gravity="center"
    >
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/map_photo"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/screen1_iv"
    android:layout_marginBottom="@dimen/_300sdp"
    />

    <TextView
        android:id="@+id/findText"
        android:layout_width="302dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/interbold"
        android:gravity="center"
        android:text="Find your nearest recycling events"
        android:textColor="@color/black"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/screen1_iv" />

    <TextView
        android:id="@+id/descBoard"
        android:layout_width="291dp"
        android:layout_height="169dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/interregular"
        android:text="Click on the map icon to see all available recycling events near you. Join other groups to help clean the environment and share rewarding points with them ! "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/screen1_iv"
        app:layout_constraintTop_toBottomOf="@id/findText"
        app:layout_constraintVertical_bias="0.008" />


</androidx.constraintlayout.widget.ConstraintLayout>