<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RECYCLEview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_3</item>
        <item name="colorPrimaryVariant">@color/color_1</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_4</item>
        <item name="colorSecondaryVariant">@color/color_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RECYCLEview.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RECYCLEview.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.RECYCLEview.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>